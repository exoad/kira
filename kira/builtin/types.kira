module "kira:builtin/types"

pub class Any
pub class Void
pub class Never

pub class Bool

pub true: Bool = Bool { }
pub false: Bool = Bool { }

pub class Str

pub class Num
pub class Int8: Num
pub class Int16: Num
pub class Int32: Num
pub class Int64: Num
pub class Float32: Num
pub class Float64: Num

pub alias Int as Int32
pub alias Float as Float64

pub trait Tuple<T> {
    pub fx size(): Int32
}

pub class Tuple0: Tuple<Void> {
    pub fx size(): Int32 {
        return 0
    }
}

pub class Tuple1<T> : Tuple<Tuple1<T>> {
    require pub first: T

    pub fx size(): Int32 {
        return 1
    }
}

pub class Tuple2<A, B>: Tuple<Tuple2<A, B>> {
    require pub first: A
    require pub second: B

    pub fx size(): Int32 {
        return 2
    }
}

pub alias Pair<A, B> as Tuple2<A, B>

