pub trait Iterable<T> {
    pub fx size(): Int32
}

pub class Arr<T>: Iterable<T>

pub class List<T>: Iterable<T> {
    require values: Arr<T>
}

pub class Map<K, V> {
    require values: Arr<Tuple2<K, V>>
}

pub class Set<T> {
    require values: Arr<T>
}